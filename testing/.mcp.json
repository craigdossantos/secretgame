{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--isolated",
        "--save-trace",
        "--save-video=1280x720",
        "--allowed-origins=http://localhost:3000;http://localhost:3001;http://localhost:5173;http://127.0.0.1:3000"
      ]
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    }
  }
}
